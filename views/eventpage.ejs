<% include partials/header %>

<!-- This will serve as my main page -->
<!-- This site is bascially going to be a static site. A lot of data is going to be pulled from faker.js. This site will serve as an alpha -->

    
    <div class="eventpage">
        
        
        <!-- Place the event header/title here -->
        
        <div class="titleandheader">
        
            <h2 class="eventtitleheader">
                
                 <%= event.eventName %>
                
            </h2>
            
            <!-- Is there a way to retrieve the image from our script.js or index.ejs file into here? I guess a database is needed to do so -->
            <img class="eventpageimage" src="<%= event.eventImage %>">
            
        </div>
        
        <div class="eventpagedescription">
            
            <h3 class="eventpagedate"> <%= event.eventDate %> </h3>
            <p class="eventpageaddress"> <%= address.eventStreetAddress %></p>
            <p class="eventpageaddress"> <%= address.eventCity %>, <%= address.eventState %></p>
            <p class="eventpageaddress"> <%= address.eventZipCode %></p>
            
        </div>
        
        <div class="infoGroup">
            
            <h3 class="infoGroupHeader">Event Description</h3>
            <p class="eventcreator">
                <%= event.createdby.username %>
            </p>
            <p class="eventpageinfo">
                <%= event.eventDescription %>
            </p>
            
        </div>
        
        
        
       
        
        <div class="eventpagetaskstab">
            <h3>Tasks</h3>
            <p>Various tasks placed here</p>
            
            
        </div>
        
     
        
        <div class="eventpagefriends">
            <h3>Friends going to event</h3>
            <p>Friends are placed in here</p>
            
            <hr>
            
            <div class="listfriends">
                
                <div class="friendelement">
                <img class="friend1" src="https://images.unsplash.com/photo-1527631746610-bca00a040d60?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=713226528e0e3a02140dcce99bf25443&auto=format&fit=crop&w=668&q=80">
                
                
                </div>
               
                
            </div>
            
            
        </div>
        
        
        <div class="eventpagevideosandphotos">
            <h3>Videos & Photos from Friends</h3>
            <p>Videos & photos are placed in here</p>
        </div>
        
      
        <div class="infoGroup">
            <!-- Event Comments -->
            
            <h3 class="infoGroupHeader">Comments</h3>
            <div>
                <form class="commentInput" action="/events/<%=event._id%>/comment" method="POST">
                    <label for="comment_inputs">Input Comments....</label>
                    <textarea name="userComment" class="commentTextArea" rows="5" col="50" id="comment_input"></textarea>
                    <div class="commentButtons">
                        <button>Comment</button>
                    </div>
                </form>
                
            </div>
            
            
            <div class="displayComments">
                
                <!-- Create a dynamic way to display all user comments in here -->
                
                
                <!-- Create a forloop here to loop through your comment object and to display all of your comments -->
                
                <!-- To work on -->
                
                <% event.eventComments.forEach(function(commentObject){ %>
                
                <p><%= commentObject.comment %></p>
                <p>Created By: <%= commentObject.username %></p>
                
                <% }); %>
                
            </div>
            
            
            
        </div>
        
        
        
        
    </div>
    
    
    
    
</div> <!-- .container -->








